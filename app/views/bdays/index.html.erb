<p id="notice"><%= notice %></p>

<h1>Bdays</h1>

<%= form_tag('/bdays', :method => 'get') do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name =>nil %>
  </p>
<%end%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bdays.each do |bday| %>
      <tr>
        <td><%= bday.name %></td>
        <td><%= bday.fecha %></td>
        <td><%= link_to 'Show', bday %></td>
        <td><%= link_to 'Edit', edit_bday_path(bday) %></td>
        <td><%= link_to 'Destroy', bday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bday', new_bday_path %>

<div class="container">
  <div class="row">
      <div id="calendar"></div>
  </div>
</div>


<script>
  $('#calendar').fullCalendar(
    {events: '/bdays.json'}
    );
</script>